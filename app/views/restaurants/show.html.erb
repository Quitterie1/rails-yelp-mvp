<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.category.capitalize %></p>
  <p><%= @restaurant.address %></p>
  <h3>Restaurant reviews</h3>
  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.content %>
      - <%= review.rating %>
    </li>
    <% end %>
  </ul>
  <p><%= link_to 'Go back to list', restaurants_path %></p>
  <p><%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %></p>
</div>
<div class="container">
  <h1>Create a new review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "add a new review", class: "btn btn-primary" %>
  <% end %>
</div>
